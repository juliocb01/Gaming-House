<div class="container">
  <h1>Create a bootcamp</h1>

<%= simple_form_for @bootcamp do |f|  %>
  <%= f.input :name  %>
  <%= f.input :address,
    input_html: { data: { geocoder_target: "address" } },
    wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }  %>
  <%= f.input :price %>
  <%= f.input :pc_number %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-create btn-rounded'%>
  <%# <%= raise %>
<% end %>

<%= link_to 'Back', bootcamps_path %>

</div>
