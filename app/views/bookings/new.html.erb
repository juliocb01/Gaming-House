<div class="container">
  <div class='row vh-100 mt-5'  style='box-shadow: 1px 1px 3px #23c483; border-radius: 20px'>
    <div class='col-6 p-5 d-flex align-items-center' >
      <div class="w-100">
        <div class="d-flex  justify-content-between">
          <h1>Create a booking</h1>

          <%= link_to 'Return', bootcamps_path, class: "btn return-btn align-self-center" %>
        </div>

          <%= simple_form_for([@bootcamp, @booking]) do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit  class: 'btn btn-create btn-rounded m-3' %>
          <% end %>
          </div>
    </div>

    <div class='col-6' style="background-image: url('<%= image_path("booking.jpg")%>'); background-size: cover; background-position: center; border-radius: 0px 20px 20px 0px">

    </div>
  </div>
</div>
