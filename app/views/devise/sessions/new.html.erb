<div class="container">
  <div class="row justify-content- vh-100 mt-5"  style='box-shadow: 1px 1px 3px #23c483; border-radius: 20px'>
    <div class="col-6">
      <div class="form-style">
        <h2 style="color: #0ef6be;">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-login" %>
          </div>
        <% end %>
        <div class= 'd-flex mt-2'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class='col-6' style="background-image: url('<%= image_path("create.jpg")%>');  background-size: cover; background-position: center; border-radius: 0px 20px 20px 0px">

    </div>
  </div>
</div>
